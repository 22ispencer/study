---
import {
    SignedIn,
    SignedOut,
    UserButton,
    SignInButton,
} from "@clerk/astro/components";
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header class="border-b p-2">
            <nav class="flex flex-row">
                <div class="flex-1"></div>
                <SignedOut>
                    <SignInButton
                        class="rounded bg-primary text-white p-2 flex-none"
                        mode="modal"
                    />
                </SignedOut>
                <SignedIn>
                    <UserButton />
                </SignedIn>
            </nav>
        </header>
        <article>
            <slot />
        </article>
    </body>
</html>
